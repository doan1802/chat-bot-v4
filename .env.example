# Chatbot Environment Variables
# Copy this file to .env and update with your actual values

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# User Service - Supabase Project 1
USER_SUPABASE_URL=
USER_SUPABASE_ANON_KEY=
# Chat Service - Supabase Project 2
CHAT_SUPABASE_URL=
CHAT_SUPABASE_ANON_KEY=
# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Legacy - Backward compatibility (có thể để trống)
SUPABASE_URL=https://your-user-project-id.supabase.co
SUPABASE_ANON_KEY=your-user-supabase-anon-key-here

# Redis Configuration
REDIS_URL=redis://redis:6379

# Environment
NODE_ENV=production

# Service URLs (for Docker Compose)
USER_SERVICE_URL=http://user-service:3001
CHAT_SERVICE_URL=http://chat-service:3004
VOICE_SERVICE_URL=http://voice-service:3005

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
