# Chatbot Environment Variables
# Copy this file to .env and update with your actual values

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.c
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Gemini AI Configuration (if using)
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration (if not using Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/chatbot

# Redis Configuration
REDIS_URL=redis://redis:6379

# Environment
NODE_ENV=production

# Service URLs (for Docker Compose)
USER_SERVICE_URL=http://user-service:3001
CHAT_SERVICE_URL=http://chat-service:3004
VOICE_SERVICE_URL=http://voice-service:3005

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
